<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efffda"
    tools:context=".RegisterActivity">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/m"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/cardview_bkg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/signup_here"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="Sign Up"
                        android:textColor="@color/black"
                        android:textColorHint="@color/placeholder"

                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.1"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/edUserName_rg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/edit_text_bkg"
                        android:drawableLeft="@drawable/ic_baseline_account_circle_24"
                        android:drawablePadding="10dp"
                        android:elevation="3dp"
                        android:hint="Enter User Name"
                        android:inputType="textEmailAddress"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/placeholder"
                        android:visibility="visible"
                        android:windowSoftInputMode="stateHidden"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/signup_here"
                        app:layout_constraintWidth_percent=".8"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/edEmail_rg"
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bkg"
                        android:drawableLeft="@drawable/ic_baseline_email_24_black"
                        android:drawablePadding="10dp"
                        android:elevation="3dp"
                        android:hint="Enter Email"
                        android:inputType="textEmailAddress"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/placeholder"
                        android:visibility="visible"
                        android:windowSoftInputMode="stateHidden"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edUserName_rg"
                        app:layout_constraintWidth_percent=".8"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/edPassword_rg"
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bkg"
                        android:drawableLeft="@drawable/ic_baseline_lock_24"
                        android:drawablePadding="10dp"
                        android:elevation="3dp"
                        android:hint="Enter Password"
                        android:inputType="textPassword"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/placeholder"
                        android:visibility="visible"
                        android:windowSoftInputMode="stateHidden"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edEmail_rg"
                        app:layout_constraintWidth_percent=".8"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/edPhone_rg"
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bkg"
                        android:drawableLeft="@drawable/ic_baseline_phone_24"
                        android:drawablePadding="10dp"
                        android:elevation="3dp"
                        android:hint="Enter Phone No"
                        android:inputType="phone"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/placeholder"
                        android:visibility="visible"
                        android:windowSoftInputMode="stateHidden"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edPassword_rg"
                        app:layout_constraintWidth_percent=".8"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/edreligion_rg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bkg"
                        android:drawableLeft="@drawable/ic_baseline_self_improvement_24"
                        android:drawablePadding="10dp"
                        android:elevation="3dp"
                        android:hint="Religion"
                        android:inputType="text"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/placeholder"
                        android:visibility="visible"
                        android:windowSoftInputMode="stateHidden"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edPhone_rg"
                        app:layout_constraintWidth_percent=".8"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/tV_RadioBtns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="20dp"
                        android:gravity="start"
                        android:text="Please Select Account Role:"

                        android:textColor="@color/black"
                        android:textColorHint="@color/placeholder"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edreligion_rg" />

                    <LinearLayout
                        android:id="@+id/rV_RadioBtns"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tV_RadioBtns">

                        <RadioGroup
                            android:id="@+id/role_radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/user_radio_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Register as User"
                                android:textColor="@color/placeholder"
                                android:textSize="12sp" />

                            <RadioButton
                                android:id="@+id/rider_radio_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Register as Supplier"
                                android:textColor="@color/placeholder"
                                android:textSize="12sp" />


                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rV_RadioBtnsType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteY="527dp">

                        <RadioGroup
                            android:id="@+id/userType_radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/signup_Btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="126dp"
                        android:background="@drawable/btn_round_bg"
                        android:padding="0dp"
                        android:text="Sign Up"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edreligion_rg"
                        app:layout_constraintVertical_bias="0.1"
                        app:layout_constraintWidth_percent=".8" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_signtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Have An Account? "
                    android:textColor="@color/black"
                    android:textColorHint="@color/placeholder"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintWidth_percent=".4"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Log In"
                    android:textColor="@color/black"
                    android:textColorHint="@color/placeholder"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_signtxt"
                    app:layout_constraintStart_toEndOf="@+id/tv_signtxt"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
